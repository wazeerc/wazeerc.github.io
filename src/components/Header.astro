<style>
  header {
    margin: 0.8em;
    padding: 0 1em;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 0.6em 0.4em;
    color: var(--text-tertiary);
    transition: color 0.4s ease;

    &:hover:not(.active),
    &:focus:not(.active) {
      color: var(--text-secondary);
    }
  }
  nav a.active {
    text-decoration: underline;
  }
  .social-links,
  .social-links a {
    display: flex;
    gap: 0.2em;
  }
  @media (max-width: 1024px) {
    .social-links {
      display: none;
    }
  }
</style>
